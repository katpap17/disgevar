html
    head
        title = "Gene - Disease Associations"
        link(rel="stylesheet" href ="/stylesheets/style.css")
        link(href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet")

    body
        include layout
        h1.nf Gene-Disease Associations
        table.table
            tr
                th Gene
                th Disease
                th NSNPs
                th NPMIDs
                th Score
                th EL
                th EI
                th First Reference
                th Last Reference
            t.body
                for item in result
                    tr
                        td #[a(href="/genes/"+item.Gene) #{item.Gene}]
                        td #[a(href="/diseases/"+item.Disease) #{item.Disease}]
                        td #{item.NSNPs}
                        td #{item.NPMIDs}
                        td #{item.Score}
                        td #{item.EL}
                        td #{item.EI}
                        td #{item.FirstRef}
                        td #{item.LastRef}

        div.footer
            p Created by Katerina Papapostolou and Dimitra Fouska